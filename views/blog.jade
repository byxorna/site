extends layout

block content
  .container
    section
      .page-header
        h1 Blog
          small.pull-right.vertical-center Page #{page} of #{getPageCount()}
            
        each post in posts
          div.row
            div.span12
              a(href="#{post.url}")
                h1= post.title
              a.date.muted(data-alt-date="#{post.date.toString()}", title=post.date.toString())= moment(post.date).fromNow()
              div.snippet !{post.preview}
          
    div
      h1
        if page < getPageCount()
          small.vertical-center
            a.muted(href="/blog?page=#{page+1}") < Older
        if page > 1
          small.pull-right.vertical-center
            a.muted(href="/blog?page=#{page-1}") Newer >
